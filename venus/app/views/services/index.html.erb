<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Codigo servicio</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stylist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.codigo_servicio %></td>
        <td><%= service.nombre %></td>
        <td><%= service.precio %></td>
        <td><%= service.stylist %></td>
        <% if user_signed_in? %>
          <%@usuario = User.find(current_user.id)%>
          <% if @usuario.tipo_usuario == 1 %>
            <td><%= link_to 'Show', service %></td>
            <td><%= link_to 'Edit', edit_service_path(service) %></td>
            <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%@usuario = User.find(current_user.id)%>
  <% if @usuario.tipo_usuario == 1 or @usuario.tipo_usuario == 2 %>
    <%= link_to 'New Service', new_service_path %>
  <% end %>
<% end %>