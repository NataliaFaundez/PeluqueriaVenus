<h1>Listing Stylists</h1>

<table>
  <thead>
    <tr>
      <th>Nombre estilista</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Sueldo base</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stylists.each do |stylist| %>
      <tr>
        <td><%= stylist.nombre_estilista %></td>
        <td><%= stylist.telefono %></td>
        <td><%= stylist.direccion %></td>
        <td><%= stylist.sueldo_base %></td>
        <td><%= link_to 'Show', stylist %></td>
        <td><%= link_to 'Edit', edit_stylist_path(stylist) %></td>
        <td><%= link_to 'Destroy', stylist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

