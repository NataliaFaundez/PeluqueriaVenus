<p id="notice"><%= notice %></p>

<h1>Ventas</h1>

<div class="row">
  <div class="panel panel-primary col-md-offset-1 col-md-6">
    <div class="panel-heading">Ventas</div>

    <table class="table">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cliente</th>
          <th>Fecha</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @sales.each do |sale| %>
          <tr>
            <td><%= sale.Product %></td>
            <td><%= sale.Client %></td>
            <td><%= sale.fecha %></td>
            <% if user_signed_in? %>
              <%@usuario = User.find(current_user.id)%>
              <% if @usuario.tipo_usuario == 1 %>
                <td><%= link_to 'Mostrar', sale %></td>
                <td><%= link_to 'Editar', edit_sale_path(sale) %></td>
                <td><%= link_to 'Eliminar', sale, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
              <% end %>
            <% end %>  
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
  <div class="row col-md-offset-3">
    <% if user_signed_in? %>
      <%@usuario = User.find(current_user.id)%>
      <% if @usuario.tipo_usuario == 1 or @usuario.tipo_usuario == 2 %>
        <%= link_to 'Nueva venta', new_sale_path %>
      <% end %>
    <% end %>
  </div>
</br>
